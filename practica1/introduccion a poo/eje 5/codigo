class Persona {
    private String nombre;
    private String paterno;
    private String materno;
    private int edad;
    private int ci;

    public Persona(String nombre, String paterno, String materno, int edad, int ci) {
        this.nombre = nombre;
        this.paterno = paterno;
        this.materno = materno;
        this.edad = edad;
        this.ci = ci;
    }

    public String getPaterno() {
        return paterno;
    }

    public void mostrarDatos() {
        System.out.println("Nombre: " + nombre + " Apellido paterno: " + paterno + " Apellido materno: " + materno + " Edad: " + edad + " CI: " + ci);
    }

    public void mayorDeEdad() {
        if (edad >= 18) {
            System.out.println("SÃ­ es mayor de edad");
        } else {
            System.out.println("No es mayor de edad");
        }
    }

    public void modificarEdad(int nuevo) {
        edad = nuevo;
        System.out.println("La nueva edad es: " + edad);
    }
}

public class Main {
    public static void main(String[] args) {
        Persona victor = new Persona("Victor", "Mancilla", "Corrales", 20, 13553236);
        Persona juan = new Persona("Juan", "Cusi", "Flores", 15, 1234567);

        victor.mostrarDatos();
        victor.mayorDeEdad();
        victor.modificarEdad(18);

        juan.mostrarDatos();
        juan.mayorDeEdad();
        juan.modificarEdad(17);

        if (juan.getPaterno().equals(victor.getPaterno())) {
            System.out.println("Ambos tienen el mismo apellido paterno");
        } else {
            System.out.println("Ambos tienen apellidos distintos");
        }
    }
}
